<div class="box" id='casebook'>
  <div class='grid-list-container' style='height:auto'>
    <ul class='item-list green' id='casebook-list'>	
      <% plot_threads.each do |plot_thread| %>
        <li>	
	      <h3>
			<em><%= pluralize plot_thread.investigations_count, 'investigation' %></em>
			<span>PLOT:</span> <%= plot_thread.plot.title %>
		  </h3>	
		  <h5>		
	        <em><%= plot_thread.plot.subtitle %></em>
	      </h5>
	
          <div class='profile' style='height:80px;'>
		  <ul class='reward-list' style='height:75px;border:3px;background-color:transparent'>	
		    <% plot_thread.plot.rewards.each do |reward| %>
		      <li class='<%= reward.reward_type %> big' style='height:60px;border:5px solid #122D00;'>
			    <span class='name'>Reward: <%= reward.reward_type.upcase %></span>
			    <span style='display:block;color:#eee;font-size:10px;margin-top:5px;'>
			      <%= reward.reward_name %>
			    </span>
			  </li>
		    <% end %>	
		  </ul>
		</div>
        </li>
      <% end %>
    </ul>
  </div>
</div>